<%- include("partial/head") %>


<div class="container">
    <%- include("partial/nav") %>
    <h2>Add Review</h2>
    <form action="/add-reviews" method="post">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label>Choose User</label>
                    <select class="form-control" name="user">
                        <option disabled selected>Select Users</option>
                        <% for(let data1 of displayData1) {%>
                        <option value="<%= data1.id %>"><%= data1.name %></option>
                        <% } %>
                    </select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>Choose Movie</label>
                    <select class="form-control" name="movie">
                        <option disabled selected>Select Movie</option>
                        <% for(let data2 of displayData2) {%>
                        <option value="<%= data2.id %>"><%= data2.movieName %></option>
                        <% } %>
                    </select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>Enter Review</label>
                    <input type="text" name="review" class="form-control" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-lg btn-block">Add</button>
    </form>
</div>

<%- include("partial/bottom") %>