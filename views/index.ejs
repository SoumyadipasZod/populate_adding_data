
<%- include("partial/head") %>

      
     <div class="container">
         <%- include("partial/nav") %> 
        <h2>Demonstrate The Concept Of Populate In Mongoose</h2>           
        <table class="table table-dark">
          <thead>
            <tr>
              <th scope="col">User Name</th>
              <th scope="col">user Email</th>
              <th scope="col">Movie</th>
              <th scope="col">Actors</th>
              <th scope="col">Director</th>
              <th scope="col">Review</th>
            </tr>
          </thead>
          <tbody>
            <% for(let data of displayData) {%>
                <tr>
                    <td>
                        <%= data.user.name %>
                    </td>
                    <td>
                        <%= data.user.email %>
                    </td>
                    <td>
                        <%= data.movie.movieName %>
                    </td>
                    <td>
                        <%= data.movie.actors %>
                    </td>
                    <td>
                        <%= data.movie.director %>
                    </td>
                    <td>
                        <%= data.review %>
                    </td>
                </tr>
                <% } %>
        </tbody>
        </table>
      </div>

      <%- include("partial/bottom") %> 

